#compdef gh

_gh() {
  local state

  local -a args
  args=('-t[3rd party repo]: :->third' '-n[New project]: :->new')
  if [[ "$AUR" != "" ]]; then
    args+='-aur[AUR repo]: :->aur'
  fi
  args+='*: :->project'

  _arguments $args

  local dir=$HOME/Documents/GitHub
  case $state in
   (third) dir="$dir/3rd-party" ;;
   (aur) dir="$dir/3rd-party/aur" ;;
   (new) return ;;
  esac
  compadd "$@" $(ls $dir)
}
