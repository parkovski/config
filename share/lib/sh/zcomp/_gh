#compdef gh

_gh() {
  local state

  local -a args
  args=('-t[3rd party repo]: :->third' '-a[Alternate dir]: :->alt')
  args+='*: :->project'

  _arguments $args

  local basedir=$GH
  local subdir=
  case $state in
   (third) subdir="/3p" ;;
   (alt) basedir=$GH2 ;;
  esac
  compadd "$@" $(ls "$basedir$subdir")
}
